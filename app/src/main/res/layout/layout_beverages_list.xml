<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <TextView
        android:id="@+id/beverageNameLayoutTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="18dp"
        android:text="Beverage Name"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/alcoholValueLayoutTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/beverageNameLayoutTextView"
        android:layout_marginEnd="70dp"
        android:text="Alcohol value"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/priceLayoutTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/sizeLayoutTextView"
        android:layout_marginEnd="129dp"
        android:text="Price" />

    <TextView
        android:id="@+id/sizeLayoutTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="75dp"
        android:text="Size" />

    <TextView
        android:id="@+id/bottlesLayoutTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/priceLayoutTextView"
        android:layout_marginEnd="42dp"
        android:text="Bottles" />

    <TextView
        android:id="@+id/alcoholByVolumeLayoutTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/priceLayoutTextView"
        android:layout_toEndOf="@+id/beverageNameLayoutTextView"
        android:text="Alcohol" />
</RelativeLayout>